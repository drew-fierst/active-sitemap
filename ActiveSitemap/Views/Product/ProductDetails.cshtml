@model Product

@{
	ViewBag.Title = "Product Details";
}

<h1>@ViewBag.Title</h1>

<div>
	<a href="@AppMap.ProductListRoute.BuildUrl()">Back to categories</a>
</div>

<p>@ViewBag.Message</p>

<dl>

	<dt>Product</dt>
	<dd>@Model.ProductName</dd>

	<dt>Description</dt>
	<dd>@Model.Description</dd>

	<dt>Price</dt>
	<dd>@Model.Price.ToString("C")</dd>

</dl>

@section Scripts {
	<script>
		var currentMenu = 'products';
	</script>
}